{
  "name": "sliderbed-conveyor-calculator",
  "version": "1.0.0",
  "description": "Versioned, test-driven calculation engine for sliderbed conveyor application design",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "next dev",
    "dev:stable": "cross-env WATCHPACK_POLLING=true CHOKIDAR_USEPOLLING=1 next dev -p 3000",
    "dev:wsl": "cross-env WATCHPACK_POLLING=true CHOKIDAR_USEPOLLING=1 next dev -H 0.0.0.0 -p 3000",
    "dev:clean": "rimraf .next && next dev -p 3000",
    "dev:reset": "node scripts/dev-reset.mjs",
    "build": "next build",
    "start": "next start",
    "build:lib": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "example": "npm run build:lib && node dist/examples/basic-usage.js",
    "recipes:test": "npx ts-node scripts/recipes-test.ts",
    "recipes:drift": "npx ts-node scripts/recipes-drift.ts"
  },
  "keywords": [
    "conveyor",
    "calculator",
    "sliderbed",
    "engineering"
  ],
  "author": "MC3 Manufacturing Inc.",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "prettier": "^3.1.1",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.39.3",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.1.0",
    "next": "^15.1.3",
    "postcss": "^8.4.33",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.1"
  }
}
